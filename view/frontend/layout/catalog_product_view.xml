<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.addtocart">
            <block class="Humm\HummPaymentGateway\Block\Advert\Widget" name="product.info.addtocart.Humm.productimage" template="advert/widget.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">product</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="product.info.addtocart.additional">
            <block class="Humm\HummPaymentGateway\Block\Advert\Widget" name="product.info.addtocart.additional.Humm.productimage" template="advert/widget.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">product</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="page.top">
            <block class="Humm\HummPaymentGateway\Block\Advert\Banner" name="humm.productbannerSlice"
                   template="advert/slice.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">product</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>
