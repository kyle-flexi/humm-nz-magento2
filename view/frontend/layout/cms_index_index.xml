<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.top">
            <block class="Humm\HummPaymentGateway\Block\Advert\Banner" name="humm.productbannerSlice"
                   template="advert/slice.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">home</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="main.content">
            <block class="Humm\HummPaymentGateway\Block\Advert\Banner" name="humm.productbannerMiddle"
                   template="advert/banner.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">home</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
